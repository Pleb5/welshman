{
  "name": "paravel",
  "version": "1.0.0",
  "description": "Yet another toolkit for nostr",
  "files": [
    "dist"
  ],
  "main": "./dist/paravel.umd.js",
  "module": "./dist/paravel.es.js",
  "exports": {
    ".": {
      "import": "./dist/paravel.es.js",
      "require": "./dist/paravel.umd.js"
    }
  },
  "scripts": {
