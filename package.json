{
  "name": "paravel",
  "version": "0.3.8",
  "description": "Yet another toolkit for nostr",
  "author": "hodlbod",
  "license": "MIT",
  "keywords": [
    "nostr"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/coracle-social/paravel.git"
  },
  "types": "./build/src/main.d.ts",
  "exports": {
    ".": {
      "import": "./build/src/main.mjs",
      "require": "./build/src/main.cjs"
    },
    "./types": "./build/src/main.d.ts"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "pub": "npm i && npm run lint && tsc-multi && npm publish",
    "build": "tsc-multi",
    "clean": "gts clean",
    "lint": "gts lint",
    "fix": "gts fix",
    "prepare": "yarn run build",
    "pretest": "yarn run build",
    "posttest": "yarn run lint"
  },
  "dependencies": {
    "isomorphic-ws": "^5.0.0",
    "nostr-tools": "^1.15.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "20.4.6",
    "@types/ws": "^8.5.5",
    "gts": "^5.0.1",
    "tsc-multi": "^1.1.0",
    "typescript": "~5.1.6"
  }
}
