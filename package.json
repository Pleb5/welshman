{
  "name": "paravel",
  "version": "0.4.21",
  "description": "Yet another toolkit for nostr",
  "author": "hodlbod",
  "license": "MIT",
  "keywords": [
    "nostr"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/coracle-social/paravel.git"
  },
  "types": "./build/src/main.d.ts",
  "exports": {
    ".": {
      "import": "./build/src/main.mjs",
      "require": "./build/src/main.cjs"
    },
    "./types": "./build/src/main.d.ts"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "pub": "pnpm install && pnpm run lint && tsc-multi && pnpm publish",
    "build": "tsc-multi",
    "clean": "gts clean",
    "lint": "gts lint",
    "fix": "gts fix",
    "prepare": "pnpm build",
    "pretest": "pnpm build",
    "posttest": "pnpm lint"
  },
  "dependencies": {
    "isomorphic-ws": "^5.0.0",
    "normalize-url": "^8.0.0",
    "nostr-tools": "^2.1.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "20.4.6",
    "@types/ws": "^8.5.5",
    "gts": "^5.0.1",
    "tsc-multi": "^1.1.0",
    "typescript": "~5.1.6"
  }
}
